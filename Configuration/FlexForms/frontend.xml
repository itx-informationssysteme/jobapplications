<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <sheets>
        <singleView>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:jobapplications/Resources/Private/Language/locallang_backend.xlf:flexform.tab.postingTitle</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.detailViewUid>
                        <TCEforms>
                            <label>LLL:EXT:jobapplications/Resources/Private/Language/locallang_backend.xlf:flexform.general.detailView</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                                <eval>required</eval>
                            </config>
                        </TCEforms>
                    </settings.detailViewUid>
                    <settings.itemsOnPage>
                        <TCEforms>
                            <label>LLL:EXT:jobapplications/Resources/Private/Language/locallang_backend.xlf:flexform.itemsOnPage</label>
                            <config>
                                <type>input</type>
                                <size>10</size>
                                <eval>trim,int,required</eval>
                                <default>9</default>
                            </config>
                        </TCEforms>
                    </settings.itemsOnPage>
                    <settings.categories>
                        <TCEforms>
                            <label>LLL:EXT:jobapplications/Resources/Private/Language/locallang_backend.xlf:flexform.category</label>
                            <config>
                                <type>select</type>
                                <renderMode>tree</renderMode>
                                <renderType>selectTree</renderType>
                                <treeConfig>
                                    <parentField>parent</parentField>
                                    <appearance>
                                        <maxLevels>99</maxLevels>
                                        <expandAll>TRUE</expandAll>
                                        <showHeader>TRUE</showHeader>
                                        <width>600</width>
                                    </appearance>
                                </treeConfig>
                                <foreign_table>sys_category</foreign_table>
                                <foreign_table_where>AND (sys_category.sys_language_uid = 0 OR sys_category.l10n_parent = 0) ORDER BY sys_category.sorting</foreign_table_where>
                                <size>15</size>
                                <minitems>0</minitems>
                                <maxitems>99</maxitems>
                            </config>
                        </TCEforms>
                    </settings.categories>
                    <settings.prefiltered_location>
                            <exclude>1</exclude>
                            <label>Pre-filtered Location(s):</label>
                            <config>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <foreign_table>tx_jobapplications_domain_model_location</foreign_table>
                                <size>3</size>
                                <autoSizeMax>10</autoSizeMax>
                            </config>
                    </settings.prefiltered_location>
                </el>
            </ROOT>
        </singleView>
    </sheets>
</T3DataStructure>